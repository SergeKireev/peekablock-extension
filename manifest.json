{

  "description": "Peek at the execution of a transaction before signing it",
  "manifest_version": 3,
  "name": "peekablock",
  "version": "0.1.0",
  "homepage_url": "https://github.com/SergeKireev/peekablock-extension/blob/main",
  "icons": {
    "48": "icons/peekablock.png"
  },

  "permissions": [
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
      "https://peekablock.com/*"
  ],
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": [
        "content_scripts/inject.js"
      ]
    }
  ],
  
  "web_accessible_resources": [{
    "resources": ["inpage.js", "index.js"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "background": {
    "service_worker": "background-script.js"
  }
}
